<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
		id          = "myfirstapp"
        version     = "1.0.0" >

    <name>GitaroweAkordy</name>
    <description>GitaroweAkordy</description>
    <author href="" email="szymon.d.koprek@gmail.com">
        Szymon Koprek
	</author>
    <preference name="loadUrlTimeoutValue" value="700000" />
    <plugin name="cordova-plugin-whitelist" source="npm" spec="1" />
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <access origin="*"  launch-external="yes" />
	<platform name="android" />
	
	<plugin name="cordova-plugin-device" spec="~1.1.4" />
	<plugin name="cordova-plugin-dialogs" spec="~1.3.1" />
    <plugin name="cordova-plugin-network-information" spec="~1.3.2" />
<plugin name="cordova-plugin-splashscreen" spec="~4.0.2" />
    <platform name="android">
              <icon src="img/wp.png" density="ldpi" />
              <icon src="img/wp.png" density="mdpi" />
              <icon src="img/wp.png" density="hdpi" />
              <icon src="img/wp.png" density="xhdpi" />
                  <splash src="img/bg.jpg" density="land-hdpi"/>
    <splash src="img/bg.jpg" density="land-ldpi"/>
    <splash src="img/bg.jpg" density="land-mdpi"/>
    <splash src="img/bg.jpg" density="land-xhdpi"/>

    <splash src="img/bg.jpg" density="port-hdpi"/>
    <splash src="img/bg.jpg" density="port-ldpi"/>
    <splash src="img/bg.jpg" density="port-mdpi"/>
    <splash src="img/bg.jpg" density="port-xhdpi"/>
<preference name="SplashScreenDelay" value="10000" />



</widget>